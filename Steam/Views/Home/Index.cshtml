@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #000;
    }

    #background-video {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        z-index: -1;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        -webkit-transition: 1s opacity;
        -moz-transition: 1s opacity;
        -ms-transition: 1s opacity;
        -o-transition: 1s opacity;
        transition: 1s opacity;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.55); 
        z-index: -1;
    }

    .content {
        position: relative;
        z-index: 1; 
    }
</style>

<video id="background-video" preload="auto" autoplay="true" muted loop="loop">
    <source src="~/homevideo.mp4" type="video/mp4">
</video>
<div class="overlay"></div>

@if(User.IsInRole("User") || User.IsInRole("Admin"))
{
    <div class="text-center">
        <h5 class="text-white 50">Сongratulation!</h5>
        <p class="text-white 50">Now you can now surf the site</p>
        <p class="text-white 50"> Go to <a asp-action="GetAll" asp-controller="Game">Store</a></p>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4 text-white 50">Welcome to the <h5 class="text-white 50">STEAM</h5></h1>
        <p class="text-white 50">Steam. This is a place where you can buy games, post your developments online, create groups</p>
        <p class="text-white 50">Before all you need to <a asp-action="Registration" asp-controller="User">register</a></p>
    </div>
}
