@{
    ViewData["Title"] = "Add";
    var dto = new GroupDto();
}

<form asp-action="Add" asp-controller="Group" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="@dto.GroupImageUrl">Image url</label>
        <input type="text" class="form-control" asp-for="@dto.GroupImageUrl">
        <span class="text-danger" asp-validation-for="@dto.GroupImageUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@dto.Name" class="form-label">Name</label>
        <input type="text" asp-for="@dto.Name" class="form-control">
        <span class="text-danger" asp-validation-for="@dto.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@dto.Description" class="form-label">Description</label>
        <input type="text" asp-for="@dto.Description" class="form-control">
        <span class="text-danger" asp-validation-for="@dto.Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<button onclick="Back('/Group/GetAll')" class="btn btn-primary">Back</button>