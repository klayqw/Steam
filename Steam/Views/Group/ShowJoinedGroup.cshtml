@model IEnumerable<Group>
@{
    ViewData["Title"] = "My Groups";
}
@if(Model is null || Model.Any() == false)
{
    <p class="text-white">Nothing is here..</p>
}
else
{
    <div class="d-flex flex-wrap p-2">
        @foreach(var item in Model)
        {
        <div>
                <div class="card bg-dark" style="width: 18rem;" onclick="showGroupDetail(@item.Id)" style="max-height: 300px;">
                <img src="@item.GroupImageUrl" class="card-img-top" alt="Game Image" style="max-height:300px">
                <div class="card-body">
                    <h5 class="card-title text-white">@item.Name</h5>
                        <p class="card-text text-white">@item.Description</p>
                        <p class="card-text text-white">@item.Creator</p>
                </div>
            </div>
            <div>
                    <button class="btn btn-primary" onclick="Leave(@item.Id)">Leave</button>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <div>
                        <button class="btn btn-primary" onclick="DeleteGroup(@item.Id)">Delete</button>
                        <button class="btn btn-primary" onclick="UpdateGroupView(@item.Id)">Update</button>
                </div>
            }
            
        </div>
        }
    </div>
}

<div>
    <button class="btn btn-primary" onclick="Back('/Group/GetAll')">Back</button>
</div>

<div id="leaved" class="modal fade bg-transparent bg-dark" role="dialog">
    <div class="modal-dialog bg-dark">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h4 class="modal-title text-white">Leaved!</h4>
            </div>
            <div class="modal-body">
                <p class="text-white">You have successfully leaved from group</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeBtn" data-dismiss="modal" onclick="CloseModel(leaved)">Close</button>
            </div>
        </div>
    </div>
</div>