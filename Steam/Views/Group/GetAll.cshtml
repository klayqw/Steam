@model IEnumerable<Group>
@{
    ViewData["Title"] = "Get All";
}

<div>
    <button class="btn btn-secondary " onclick="Back()">Back</button>
    <button class="btn btn-secondary " onclick="AddGroup()">Create Group</button>
    <button class="btn btn-secondary " onclick="ShowGroup()">Show My Creator Groups</button>
    <button class="btn btn-secondary" onclick="Back('/Group/ShowJoinedGroup')">Show My Groups</button>
</div>

<div class="d-flex flex-wrap p-2">
    @if (Model is null || Model.Any() == false)
    {
        <p class="text-white">Nothing is here..</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="p-2">
                <div>
                    
                <div class="card bg-dark border-3" onclick="showGroupDetail(@item.Id)" style="width: 18rem;">
                    <img src="@item.GroupImageUrl" class="card-img-top" alt="Group Image" style="max-height: 300px">
                    <div class="card-body">
                        <h5 class="card-title text-white">@item.Name</h5>
                        <p class="card-text text-white">@item.Description</p>
                        <p class="card-text text-white">@item.MemberCount</p>
                        <p class="card-text text-white">@item.Creator</p>
                    </div>
                    
                </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <button class="btn btn-primary" onclick="DeleteGroup(@item.Id)">Delete</button>
                            <button class="btn btn-primary" onclick="UpdateGroupView(@item.Id)">Update</button>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

<div id="deleted" class="modal fade bg-transparent bg-dark" role="dialog">
    <div class="modal-dialog bg-dark">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h4 class="modal-title text-white">Deleted!</h4>
            </div>
            <div class="modal-body">
                <p class="text-white">Your group have successfully deleted<p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeBtn" data-dismiss="modal" onclick="CloseModel(deleted)">Close</button>
            </div>
        </div>
    </div>
</div>