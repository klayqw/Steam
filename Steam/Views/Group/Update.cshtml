@model Group
@{
    ViewData["Title"] = "Update";
    var dto = new GroupDto();
}

<form id="updateGroupContainer">
    <div class="mb-3">
        <label class="form-label" asp-for="@Model.GroupImageUrl">Image url</label>
        <input type="text" class="form-control" asp-for="@Model.GroupImageUrl">
        <span class="text-danger" asp-validation-for="@dto.GroupImageUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input type="text" asp-for="@Model.Name" class="form-control">
        <span class="text-danger" asp-validation-for="@dto.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label">Description</label>
        <input type="text" asp-for="@Model.Description" class="form-control">
        <span class="text-danger" asp-validation-for="@dto.Description"></span>
    </div>
    <button type="submit" class="btn btn-primary" onclick="UpdateGroup(@Model.Id)">Submit</button>
</form>
<button onclick="Back('/Group/GetAll')" class="btn btn-primary">Back</button>