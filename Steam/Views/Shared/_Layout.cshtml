<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Steam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Steam.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary bg-secondary" >
            <div class="container-fluid">
                <img src="~/steam.png" style="max-width: 30px; max-height:30px;margin-right: 10px;" onclick="Back('/')"/>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Steam</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if(User.IsInRole("Admin") || User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Game" asp-action="GetAll">Store</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="WorkShop" asp-action="GetAll">Work Shop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Group" asp-action="GetAll">Groups</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="FindAnotherProfile">Find Another Profile</a>
                            </li>
                           
                            <li class="nav-item dropdown">
                               <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu bg-dark">
                                <li class="dropdown-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                                </li>
                                <li class="dropdown-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Libary">Libary</a>
                                </li>
                                 <li class="dropdown-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="Notification" asp-action="GetAllNotification">Notification</a>
                                </li>
                                <li class="dropdown-item">
                                        <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Settings">Settings</a>
                                </li>
                                <li class="dropdown-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Logout">Log out</a>
                                </li>
                            </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="User" asp-action="Registration">Registration</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Game" asp-action="Add">Add Game</a>
                            </li>
                            <li>
                                <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Panel">Admin Panel</a>
                            </li>
                        }                        
                        
                       
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
